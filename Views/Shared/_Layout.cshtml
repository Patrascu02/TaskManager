<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskManager</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    TaskManager
                </a>

                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Tasks" asp-action="Index">Tasks</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Users" asp-action="Index">Users</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Gamification" asp-action="Index">Gamification</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Security" asp-action="Index">Security</a></li>
                </ul>

                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <div class="container mt-3">
        @RenderBody()
    </div>

    <footer class="bg-light border-top mt-4 p-2 text-center text-muted">
        © @DateTime.Now.Year - TaskManager
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
