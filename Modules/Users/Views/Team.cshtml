@using Microsoft.AspNetCore.Identity
@using TaskManager.Modules.Users.Models
@model IList<ApplicationUser>

@{
    ViewData["Title"] = "Echipa Mea";
    Layout = "_Layout";
}

<div class="container-fluid py-5 fade-in-up">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="display-5 fw-bold text-gradient">
                <i class="bi bi-people-fill me-2"></i>Echipa Mea
            </h2>
            <p class="text-muted fs-5">Vizualizează membrii echipei și detaliile lor.</p>
        </div>

        <div class="d-flex gap-3">
            <div class="card border-0 shadow-sm bg-white bg-opacity-60 backdrop-blur px-4 py-2 d-flex align-items-center flex-row">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-3">
                    <i class="bi bi-person-check-fill fs-5"></i>
                </div>
                <div>
                    <span class="d-block small text-muted fw-bold">MEMBRI</span>
                    <span class="h5 fw-bold mb-0">@Model.Count</span>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var user in Model)
            {
                // LOGICA C# - INSIGNA PRINCIPALĂ (TITLU)
                string displayBadgeTitle = user.CurrentBadge?.Name;
                if (string.IsNullOrEmpty(displayBadgeTitle) && user.Badges != null && user.Badges.Any())
                {
                    var lastBadge = user.Badges.Select(ub => ub.Badge).LastOrDefault();
                    displayBadgeTitle = lastBadge?.Name;
                }
                displayBadgeTitle = displayBadgeTitle ?? "-";

                <div class="col-md-6 col-xl-3">
                    <div class="card h-100 border-0 shadow-lg hover-lift position-relative overflow-hidden" style="border-radius: 20px; background: rgba(255, 255, 255, 0.7); backdrop-filter: blur(10px);">

                        <div class="position-absolute top-0 start-0 w-100 h-100 opacity-10"
                             style="background: linear-gradient(135deg, #ffffff 0%, #3b82f6 100%); pointer-events: none;"></div>

                        <div class="card-body p-4 text-center position-relative z-index-1">

                            <div class="mb-3 d-inline-block position-relative">
                                <div class="bg-gradient-primary text-white rounded-circle d-flex align-items-center justify-content-center shadow-lg mx-auto"
                                     style="width: 80px; height: 80px; font-size: 2rem; font-weight: bold;">
                                    @(user.FullName?.Substring(0, 1) ?? user.UserName?.Substring(0, 1) ?? "U")
                                </div>
                                <div class="position-absolute bottom-0 end-0 p-1 bg-white rounded-circle">
                                    <div class="bg-success rounded-circle" style="width: 15px; height: 15px; border: 2px solid white;"></div>
                                </div>
                            </div>

                            <h5 class="fw-bold text-dark mb-1">@(user.FullName ?? "Utilizator")</h5>
                            <p class="text-muted small mb-2">@user.Email</p>

                            <div class="mb-3">
                                <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-10 rounded-pill px-3">
                                    <i class="bi bi-patch-check-fill me-1"></i>
                                    @displayBadgeTitle
                                </span>
                            </div>

                            @if (user.Badges != null && user.Badges.Any())
                            {
                                <div class="d-flex justify-content-center flex-wrap gap-1 mb-4 px-2" style="min-height: 25px;">
                                    @foreach (var userBadge in user.Badges)
                                    {
                                        // Verificăm dacă insigna are iconiță, altfel punem stea
                                        string icon = userBadge.Badge?.Icon ?? "bi bi-star-fill";

                                        <div class="mini-badge bg-warning bg-opacity-25 text-warning rounded-circle d-flex align-items-center justify-content-center border border-warning border-opacity-25"
                                             title="@userBadge.Badge?.Name"
                                             data-bs-toggle="tooltip"
                                             style="width: 26px; height: 26px; cursor: help; transition: transform 0.2s;">
                                            <i class="@icon" style="font-size: 0.75rem;"></i>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="mb-4" style="min-height: 26px;"></div>
                            }

                            <div class="d-flex justify-content-around border-top border-light pt-3">
                                <div>
                                    <small class="text-muted d-block" style="font-size: 0.7rem;">LEVEL</small>
                                    <span class="fw-bold text-dark">@(user.LevelId ?? 1)</span>
                                </div>
                                <div>
                                    <small class="text-muted d-block" style="font-size: 0.7rem;">XP TOTAL</small>
                                    <span class="fw-bold text-warning">@(user.TotalXp ?? 0)</span>
                                </div>
                            </div>

                            <div class="mt-4">
                                <a href="mailto:@user.Email" class="btn btn-outline-primary rounded-pill w-100 btn-sm fw-bold">
                                    <i class="bi bi-envelope me-2"></i> Contactează
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="bg-light rounded-circle p-4 d-inline-block mb-3">
                <i class="bi bi-people fs-1 text-muted opacity-50"></i>
            </div>
            <h5 class="fw-bold text-muted">Niciun membru în echipă.</h5>
        </div>
    }
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    }

    .hover-lift {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
        }

    .backdrop-blur {
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }

    .z-index-1 {
        z-index: 1;
    }

    /* Stil pentru mini insigne */
    .mini-badge:hover {
        transform: scale(1.2);
        background-color: #ffc107 !important; /* Galben mai intens la hover */
        color: white !important;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
</style>