@model TaskManager.Modules.Users.Models.UserEditViewModel

@{
    ViewData["Title"] = "Editează Utilizator";
    Layout = "~/Modules/Views/Shared/_Layout.cshtml";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">

            <div class="card border-0 shadow-lg mt-4 overflow-hidden">
                <div class="card-header bg-white border-0 text-center pt-5 pb-0">
                    <div class="mb-3">
                        <span class="d-inline-flex align-items-center justify-content-center rounded-circle shadow-sm"
                              style="width: 70px; height: 70px; background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); color: white;">
                            <i class="fas fa-user-edit fa-2x"></i>
                        </span>
                    </div>
                    <h3 class="fw-bold text-dark mb-1">Editează Profil</h3>
                    <p class="text-muted">Modifică detaliile utilizatorului.</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm mb-4 border-0" role="alert"></div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-bold text-muted small text-uppercase">Prenume</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="fas fa-user"></i></span>
                                    <input asp-for="FirstName" class="form-control bg-light border-start-0 ps-0" />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-bold text-muted small text-uppercase">Nume Familie</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="far fa-user"></i></span>
                                    <input asp-for="LastName" class="form-control bg-light border-start-0 ps-0" />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold text-muted small text-uppercase">Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control bg-light border-start-0 ps-0" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-bold text-muted small text-uppercase">Parolă Nouă</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted"><i class="fas fa-lock"></i></span>
                                <input asp-for="Password" class="form-control bg-light border-start-0 ps-0" placeholder="Lasă gol pentru a păstra parola veche" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-5">
                            <label class="form-label fw-bold text-muted small text-uppercase">Rol</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted"><i class="fas fa-user-tag"></i></span>
                                <select asp-for="Role" class="form-select bg-light border-start-0 ps-0 text-dark">
                                    <option value="User">User</option>
                                    <option value="Manager">Manager</option>
                                    <option value="Admin">Admin</option>
                                </select>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning text-white py-3 fw-bold text-uppercase shadow-sm">
                                <i class="fas fa-save me-2"></i> Salvează Modificările
                            </button>
                            <a asp-action="Index" class="btn btn-light py-2 mt-2 text-muted fw-bold">
                                <i class="fas fa-arrow-left me-2"></i> Anulează
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}