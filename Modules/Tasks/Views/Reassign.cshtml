@model TaskManager.Modules.Tasks.Models.TaskAssignment

@{
    ViewData["Title"] = "REALOCARE SARCINĂ";
    Layout = "~/Modules/Views/Shared/_Layout.cshtml";
}

<div class="fade-in pt-4">

    <header class="hud-header-panel mb-4 mt-4">
        <div>
            <h2 class="hud-welcome">REALOCARE SARCINĂ</h2>
            <small>MODIFICĂ MEMBRUL ECHIPEI RESPONSABIL</small>
        </div>
        <a asp-action="Index" class="btn-tech text-decoration-none">
            <i class="bi bi-arrow-left me-2"></i> ÎNAPOI LA LISTĂ
        </a>
    </header>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="tech-card p-4">

                <div class="mb-4 text-center">
                    <h5 class="text-white font-monospace">@Model.Task.Title</h5>
                    <p class="text-white-50 small">@Model.Task.Description</p>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4 p-3 border border-secondary rounded bg-dark">
                    <div class="text-center w-50 border-end border-secondary">
                        <small class="text-danger fw-bold font-monospace d-block mb-1">UTILIZATOR CURENT</small>
                        <div class="text-white">
                            <i class="bi bi-person-x-fill text-danger me-2"></i> @Model.User.FullName
                        </div>
                    </div>
                    <div class="text-center w-50">
                        <i class="bi bi-arrow-right-circle-fill fa-2x text-info"></i>
                    </div>
                </div>

                <form asp-action="Reassign" method="post">
                    <input type="hidden" name="id" value="@Model.TaskAssignmentId" />

                    <div class="mb-4">
                        <label class="form-label text-success fw-bold font-monospace small">NOUL RESPONSABIL</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-success"><i class="bi bi-person-check-fill"></i></span>
                            <select name="newUserId" class="form-select bg-dark text-light border-secondary font-monospace" asp-items="ViewBag.Users"></select>
                        </div>
                        <small class="text-muted font-monospace mt-2 d-block">
                            * Lista afișează doar utilizatorii care nu lucrează deja la acest task.
                        </small>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-tech fw-bold font-monospace">
                            <i class="bi bi-arrow-repeat me-2"></i> CONFIRMĂ REALOCAREA
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>