@model IEnumerable<TaskManager.Modules.Tasks.Models.UserTask>

@{
    ViewData["Title"] = "Manage Tasks";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-list-task"></i> Manage Tasks</h2>
        <a asp-action="Assign" class="btn btn-success"><i class="bi bi-plus-lg"></i> Alocă Task Nou</a>
    </div>

    <table class="table table-hover shadow-sm bg-white rounded">
        <thead class="table-light">
            <tr>
                <th>Titlu</th>
                <th>Prioritate</th>
                <th>Alocat Către</th>
                <th>Deadline & Status Timp</th>
                <th>Status Task</th>
                <th>Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                // --- LOGICĂ CALCUL TIMER ---
                string timerClass = "bg-secondary";
                string timeText = "Fără termen";

                if (item.DueDate.HasValue)
                {
                    var timeRemaining = item.DueDate.Value - DateTime.Now;

                    if (timeRemaining.TotalHours < 0)
                    {
                        timerClass = "bg-danger";
                        timeText = "Termen depășit!";
                    }
                    else if (timeRemaining.TotalDays < 1)
                    {
                        timerClass = "bg-warning text-dark";
                        timeText = $"Urgent: {timeRemaining.Hours}h {timeRemaining.Minutes}m";
                    }
                    else
                    {
                        timerClass = "bg-success";
                        timeText = $"{timeRemaining.Days}z {timeRemaining.Hours}h rămase";
                    }
                }

                <tr>
                    <td>
                        <strong>@item.Title</strong><br />
                        <small class="text-muted">
                            @(item.Description?.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)
                        </small>
                    </td>
                    <td>
                        @if (item.Priority == 1)
                        {
                            <span class="badge bg-danger">High</span>
                        }
                        else if (item.Priority == 2)
                        {
                            <span class="badge bg-warning text-dark">Medium</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Low</span>
                        }
                    </td>

                    <td>
                        @if (item.Assignments != null && item.Assignments.Any())
                        {
                            @foreach (var assignment in item.Assignments)
                            {
                                <div class="mb-1 d-flex align-items-center">
                                    <span class="me-2"><i class="bi bi-person-circle"></i> @assignment.User?.FullName</span>

                                    <a asp-action="Reassign" asp-route-id="@assignment.TaskAssignmentId"
                                       class="btn btn-sm btn-outline-warning"
                                       title="Reasignează acest task">
                                        <i class="bi bi-person-gear"></i>
                                    </a>
                                </div>
                            }
                        }
                        else
                        {
                            <span class="text-muted fst-italic">Nealocat</span>
                        }
                    </td>

                    <td>
                        <div class="d-flex flex-column">
                            <span class="small fw-bold">@(item.DueDate.HasValue? item.DueDate.Value.ToString("dd MMM yyyy") : "N/A")</span>
                            <span class="badge @timerClass" style="font-size: 0.85em;">
                                <i class="bi bi-clock"></i> @timeText
                            </span>
                        </div>
                    </td>

                    <td>
                        <span class="badge @(item.IsActive ? "bg-primary" : "bg-dark")">
                            @(item.IsActive ? "Activ" : "Inactiv")
                        </span>
                    </td>

                    <td>
                        <div class="btn-group">
                            <form asp-action="Delete" asp-route-id="@item.TaskId" method="post" onsubmit="return confirm('Sigur ștergi acest task?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Del
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>