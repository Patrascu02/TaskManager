@using Microsoft.AspNetCore.Identity
@using TaskManager.Modules.Users.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    // Obținem utilizatorul curent pentru a afișa Numele Complet (nu doar emailul)
    ApplicationUser? currentUser = null;
    if (SignInManager.IsSignedIn(User))
    {
        currentUser = await UserManager.GetUserAsync(User);
    }
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User) && currentUser != null)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 fw-bold text-dark" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                <div class="bg-gradient-primary text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 32px; height: 32px; font-size: 0.9rem;">
                    @(currentUser.FullName?.Substring(0, 1) ?? "U")
                </div>

                <span class="d-none d-md-inline">Salut, @(currentUser.FirstName ?? currentUser.UserName)</span>
            </a>

            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg animate-slide-in" aria-labelledby="profileDropdown" style="background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px); min-width: 220px; border-radius: 16px;">

                <li class="px-3 py-2 border-bottom border-light">
                    <span class="d-block small text-muted text-uppercase fw-bold">Contul Meu</span>
                    <span class="d-block fw-bold text-dark text-truncate" style="max-width: 180px;">@currentUser.Email</span>
                </li>

                <li>
                    <a class="dropdown-item py-2 mt-2" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="bi bi-person-circle me-2 text-primary"></i> Profilul Meu
                    </a>
                </li>

                <li>
                    <a class="dropdown-item py-2" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">
                        <i class="bi bi-shield-lock me-2 text-warning"></i> Securitate
                    </a>
                </li>

                <li><hr class="dropdown-divider"></li>

                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="dropdown-item py-2 text-danger fw-bold">
                            <i class="bi bi-box-arrow-right me-2"></i> Deconectare
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link btn btn-sm btn-primary text-white rounded-pill px-4 shadow-sm hover-scale ms-2" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-1"></i> Autentificare
            </a>
        </li>
    }
</ul>

<style>
    /* Animație pentru Dropdown */
    .animate-slide-in {
        animation: slideIn 0.2s ease-out forwards;
        transform-origin: top right;
    }

    @@keyframes slideIn {
        from

    {
        opacity: 0;
        transform: scale(0.95) translateY(-10px);
    }

    to {
        opacity: 1;
        transform: scale(1) translateY(0);
    }

    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    }

    .hover-scale:hover {
        transform: scale(1.05);
    }
</style>