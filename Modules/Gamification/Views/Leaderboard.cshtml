@model IEnumerable<TaskManager.Modules.Users.Models.ApplicationUser>

@{
    ViewData["Title"] = "Leaderboard";
}

<div class="container mt-4 text-center">
    <h2 class="mb-4 text-primary fw-bold"><i class="bi bi-trophy-fill text-warning"></i> Top Performers</h2>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>#</th>
                        <th>Utilizator</th>
                        <th>Nivel</th>
                        <th>Total XP</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int rank = 1;
                    }
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="fw-bold">
                                @if (rank == 1)
                                {
                                    <span class="fs-4">- 3 -</span>
                                }
                                else if (rank == 2)
                                {

                                    <span class="fs-4">- 2 -</span>
                                }
                                else if (rank == 3)
                                {

                                    <span class="fs-4">- 1 -</span>
                                }
                                else
                                {

                                    <span>@rank</span>
                                }
                            </td>
                            <td>@user.FullName</td>
                            <td><span class="badge bg-info text-dark">Lvl @(user.LevelId ?? 1)</span></td>
                            <td class="fw-bold text-success">@user.TotalXp XP</td>
                        </tr>
                        rank++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>