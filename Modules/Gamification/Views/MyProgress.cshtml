@model TaskManager.Modules.Users.Models.ApplicationUser

@{
    ViewData["Title"] = "My Progress";

    // Calcule nivel
    int currentXp = Model.TotalXp ?? 0;
    int currentLevel = Model.LevelId ?? 1;
    int nextLevelXp = currentLevel * 100;
    int progressPercent = (currentXp % 100);
    if (currentXp >= nextLevelXp) progressPercent = 100;
}

<div class="container mt-4">
    <div class="card shadow border-0 mb-4 bg-primary text-white">
        <div class="card-body p-4 d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold">@Model.FullName</h2>
                <p class="mb-0 text-white-50">Level @currentLevel Employee</p>
            </div>
            <div class="text-center">
                <div class="display-4 fw-bold">@currentXp <span class="fs-4">XP</span></div>
                <div class="badge bg-warning text-dark mt-2">Next Level: @nextLevelXp XP</div>
            </div>
        </div>
        <div class="progress rounded-0" style="height: 10px;">
            <div class="progress-bar bg-warning" role="progressbar" style="width: @progressPercent%;" aria-valuenow="@progressPercent" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-bold">
                    <i class="bi bi-clock-history text-primary"></i> Istoric Activitate
                </div>
                <div class="card-body p-0">
                    @if (Model.XpHistories != null && Model.XpHistories.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var entry in Model.XpHistories.OrderByDescending(x => x.CreatedAt).Take(10))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-star-fill text-warning me-2"></i>
                                        @entry.Reason
                                        <div class="small text-muted">@(entry.CreatedAt?.ToString("dd MMM yyyy HH:mm") ?? "N/A")</div>
                                    </div>
                                    <span class="badge bg-success rounded-pill">+@entry.ChangeAmount XP</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            Nu ai activitate recentă. Rezolvă task-uri pentru a câștiga XP!
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-bold">
                    <i class="bi bi-award text-danger"></i> Insigne & Realizări
                </div>
                <div class="card-body text-center">
                    @if (Model.Badges != null && Model.Badges.Any())
                    {
                        <div class="d-flex flex-wrap justify-content-center gap-2">
                            @foreach (var badgeLink in Model.Badges)
                            {
                                <div class="badge-item p-2 border rounded bg-light" title="@badgeLink.Badge?.Description">
                                    <div class="fs-1">🏅</div>
                                    <div class="small fw-bold">@badgeLink.Badge?.Name</div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="py-4">
                            <span class="display-1 text-muted opacity-25">🔒</span>
                            <p class="text-muted small mt-2">Încă nu ai deblocat nicio insignă.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>