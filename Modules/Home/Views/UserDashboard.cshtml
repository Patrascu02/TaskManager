@model IEnumerable<TaskManager.Modules.Tasks.Models.TaskAssignment>

@{
    Layout = "_Layout";
    ViewData["Title"] = "My Dashboard";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="mb-0">Salut, @User.Identity.Name!</h2>
                        <p class="mb-0">Ai <strong>@Model.Count()</strong> sarcini active.</p>
                    </div>
                    <div class="text-end">
                        <h3 class="mb-0">Level @(ViewBag.CurrentLevel ?? 1)</h3>
                        <small>XP: @(ViewBag.CurrentXp ?? 0)</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h3 class="mb-3"><i class="bi bi-card-checklist"></i> Sarcinile Mele</h3>

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm">
            <i class="bi bi-info-circle"></i> Nu ai nicio sarcină activă momentan. Relaxează-te! ☕
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var assignment in Model)
            {
                // --- LOGICĂ CALCUL TIMER ȘI STATUS TIMP ---
                var isOverdue = assignment.Task.DueDate.HasValue && assignment.Task.DueDate.Value < DateTime.Now;

                string timerClass = "bg-success";
                string timerText = "Fără termen";

                if (assignment.Task.DueDate.HasValue)
                {
                    var timeRemaining = assignment.Task.DueDate.Value - DateTime.Now;

                    if (isOverdue)
                    {
                        timerClass = "bg-danger";
                        timerText = "Expirat (-50% XP)";
                    }
                    else if (timeRemaining.TotalDays < 1)
                    {
                        timerClass = "bg-warning text-dark";
                        timerText = $"Urgent: {timeRemaining.Hours}h {timeRemaining.Minutes}m";
                    }
                    else
                    {
                        timerClass = "bg-success";
                        timerText = $"{timeRemaining.Days}z {timeRemaining.Hours}h rămase";
                    }
                }

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-start border-5
                            @(isOverdue ? "border-danger bg-light" :
                                               assignment.Task.Priority == 1 ? "border-danger" :
                                               assignment.Task.Priority == 2 ? "border-warning" : "border-success")">

                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <span class="badge @timerClass shadow-sm">
                            <i class="bi bi-clock"></i> @timerText
                        </span>

                        @if (assignment.Status == 0)
                                {
                                    <span class="badge bg-secondary">Nou</span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-dark">În Lucru</span>
                                }
                            </div>

                            <h5 class="card-title fw-bold">@assignment.Task.Title</h5>
                            <p class="card-text text-muted small" style="min-height: 40px;">
                                @assignment.Task.Description
                            </p>

                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="bi bi-calendar-event"></i> Limită:
                                    @(assignment.Task.DueDate.HasValue? assignment.Task.DueDate.Value.ToString("dd MMM HH:mm") : "N/A")
                                </small>
                            </div>

                            <hr />

                            <div class="d-grid gap-2">
                                @if (assignment.Status == 0)
                                {
                                    <a asp-controller="Tasks" asp-action="VoteDifficulty" asp-route-id="@assignment.TaskAssignmentId" class="btn btn-outline-primary">
                                        <i class="bi bi-bar-chart-fill"></i> Votează Dificultatea
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="Tasks" asp-action="CompleteTask" asp-route-id="@assignment.TaskAssignmentId" class="btn btn-success">
                                        <i class="bi bi-check-circle-fill"></i> Finalizează & Feedback
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>