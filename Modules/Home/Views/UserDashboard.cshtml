@using TaskManager.Modules.Tasks.Models
@using TaskManager.Modules.Users.Models
@using TaskManager.Modules.Gamification.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@model IEnumerable<TaskAssignment>

@{
    Layout = "_Layout";
    ViewData["Title"] = "COMMAND_CENTER";

    var currentUser = await UserManager.GetUserAsync(User);
    string displayName = currentUser?.FullName;
    if (string.IsNullOrEmpty(displayName)) displayName = currentUser?.UserName?.Split('@')[0] ?? "OPERATIVE";

    string userInitials = "OP";
    if (!string.IsNullOrEmpty(displayName))
    {
        var parts = displayName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        userInitials = parts.Length >= 2 ? $"{parts[0][0]}{parts[1][0]}".ToUpper() : parts[0].Substring(0, 1).ToUpper();
    }

    int currentLevel = (ViewBag.CurrentLevel as int?) ?? 1;
    int currentXp = (ViewBag.CurrentXp as int?) ?? 0;
    int xpProgress = currentXp % 100;

    var myBadges = ViewBag.MyBadges as IEnumerable<UserBadge>;
    if (myBadges == null) { myBadges = new List<UserBadge>(); }

    var tasksNew = Model.Where(t => t.Status == 0).ToList();
    var tasksInProgress = Model.Where(t => t.Status == 1).ToList();
}

<div class="dashboard-wrapper fade-in">

    <aside class="cyber-sidebar">
        <div class="profile-hud">
            <div class="avatar-hex">
                <span class="avatar-text">@userInitials</span>
            </div>
            <div>
                <h5 class="hud-username">@displayName</h5>
                <div class="hud-role">
                    <i class="bi bi-shield-check me-1"></i> ACCESS GRANTED
                </div>
            </div>
        </div>

        <div class="p-3 mb-4" style="background: rgba(0,0,0,0.2); border: 1px dashed rgba(255,255,255,0.2); border-radius: 8px;">
            <div class="d-flex justify-content-between text-info small font-monospace mb-1">
                <span>LVL.@currentLevel</span>
                <span>XP:@currentXp</span>
            </div>
            <div class="progress" style="height: 6px; background: rgba(255,255,255,0.1);">
                <div class="progress-bar bg-info" style="width: @xpProgress%; box-shadow: 0 0 10px #0dcaf0;"></div>
            </div>
            <div class="text-end mt-1">
                <small class="text-white-50" style="font-size: 0.6rem;">NEXT_LVL_REQ: @(100 - xpProgress)</small>
            </div>
        </div>

        <div class="hud-stats-grid">
            <div class="hud-stat-box">
                <span class="stat-num">@Model.Count()</span>
                <span class="stat-lbl">ASSIGNMENTS</span>
                <div class="scan-line"></div>
            </div>
            <div class="hud-stat-box">
                <span class="stat-num text-warning">@myBadges.Count()</span>
                <span class="stat-lbl">TROPHIES</span>
                <div class="scan-line"></div>
            </div>
        </div>

        <div class="mt-4">
            <h6 class="text-info small font-monospace border-bottom border-secondary pb-2 mb-3">LATEST_ACQUISITIONS</h6>
            <div class="d-flex gap-2">
                @foreach (var ub in myBadges.Take(4))
                {
                    var icon = ub.Badge?.Icon ?? "bi-star-fill";
                    <div class="p-2 border border-secondary bg-dark text-warning rounded" title="@ub.Badge?.Name">
                        <i class="bi @icon"></i>
                    </div>
                }
            </div>
        </div>
    </aside>

    <main class="dashboard-main">
        <header class="hud-header-panel">
            <div>
                <h2 class="hud-welcome">DASHBOARD USER</h2>
                <small class="font-monospace">SYSTEM ONLINE // USER: @displayName.ToUpper()</small>
            </div>
            <div class="hud-date">
                <i class="bi bi-clock-history me-2"></i>@DateTime.Now.ToString("dd.MM.yyyy HH:mm")
            </div>
        </header>

        <div class="row g-4">

            <div class="col-lg-6">
                <div class="hud-col-header">
                    <h6 class="hud-col-title"><i class="bi bi-broadcast me-2"></i> INCOMING TASKS</h6>
                    <span class="hud-badge-count">@tasksNew.Count</span>
                </div>

                @if (!tasksNew.Any())
                {
                    <div class="empty-state-tech">
                        NO INCOMING DATA STREAMS
                    </div>
                }

                @foreach (var assignment in tasksNew)
                {
                    // LOGICA DE AFIȘARE DIRECT AICI (Evităm funcția locală)
                    int p = assignment.Task.Priority;
                    string prioClass = p == 1 ? "prio-1" : (p == 2 ? "prio-2" : "prio-3");
                    string prioName = p == 1 ? "CRITICAL" : (p == 2 ? "MODERATE" : "STANDARD");

                    bool overdue = assignment.Task.DueDate.HasValue && assignment.Task.DueDate.Value < DateTime.Now;
                    string dateStr = assignment.Task.DueDate.HasValue ? assignment.Task.DueDate.Value.ToString("dd.MM.yy") : "N/A";
                    string dateColor = overdue ? "text-danger fw-bold" : "text-info";

                    <div class="tech-card">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="tag-prio @prioClass">@prioName PRIORITY</span>
                            @if (overdue)
                            {
                                <span class="text-danger small font-monospace fw-bold">!! OVERDUE !!</span>
                            }
                        </div>

                        <h6 class="tech-title">@assignment.Task.Title</h6>
                        <div class="tech-line"></div>
                        <p class="tech-desc text-truncate-2">
                            @(assignment.Task.Description?.Length > 70 ? assignment.Task.Description.Substring(0, 70) + "..." : assignment.Task.Description)
                        </p>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <small class="font-monospace @dateColor"><i class="bi bi-calendar-event"></i> @dateStr</small>

                            <form asp-controller="Tasks" asp-action="StartTask" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@assignment.Task.TaskId" />
                                <button type="submit" class="btn-tech text-decoration-none border-0" style="cursor:pointer;">
                                    INITIALIZE <i class="bi bi-play-fill"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-6">
                <div class="hud-col-header" style="border-left-color: #10b981;">
                    <h6 class="hud-col-title text-success"><i class="bi bi-cpu-fill me-2"></i> ACTIVE PROCESSES</h6>
                    <span class="hud-badge-count bg-success text-dark">@tasksInProgress.Count</span>
                </div>

                @if (!tasksInProgress.Any())
                {
                    <div class="empty-state-tech">
                        NO ACTIVE PROCESSES
                    </div>
                }

                @foreach (var assignment in tasksInProgress)
                {
                    // LOGICA DE AFIȘARE DIRECT AICI
                    int p = assignment.Task.Priority;
                    string prioClass = p == 1 ? "prio-1" : (p == 2 ? "prio-2" : "prio-3");
                    string prioName = p == 1 ? "CRITICAL" : (p == 2 ? "MODERATE" : "STANDARD");

                    bool overdue = assignment.Task.DueDate.HasValue && assignment.Task.DueDate.Value < DateTime.Now;
                    string dateStr = assignment.Task.DueDate.HasValue ? assignment.Task.DueDate.Value.ToString("dd.MM.yy") : "N/A";
                    string dateColor = overdue ? "text-danger fw-bold" : "text-info";

                    <div class="tech-card">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="tag-prio @prioClass">@prioName PRIORITY</span>
                            @if (overdue)
                            {
                                <span class="text-danger small font-monospace fw-bold">!! OVERDUE !!</span>
                            }
                        </div>

                        <h6 class="tech-title">@assignment.Task.Title</h6>
                        <div class="tech-line"></div>
                        <p class="tech-desc text-truncate-2">
                            @(assignment.Task.Description?.Length > 70 ? assignment.Task.Description.Substring(0, 70) + "..." : assignment.Task.Description)
                        </p>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <small class="font-monospace @dateColor"><i class="bi bi-calendar-event"></i> @dateStr</small>

                            <a asp-controller="Tasks" asp-action="CompleteTask" asp-route-id="@assignment.TaskAssignmentId"
                               class="btn-tech btn-tech-success text-decoration-none">
                                COMPLETE <i class="bi bi-check2"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </main>
</div>