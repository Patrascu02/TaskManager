@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin Dashboard";
}


<div class="container my-5">
    <h1 class="mb-4 text-center">Admin Dashboard</h1>

    <div class="row g-4">
        <!-- Card-based dashboard, stilizat ca înainte -->
        <div class="col-md-6 col-lg-3">
            <div class="card dashboard-card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text">Add, edit, or remove users and managers.</p>
                    <a asp-controller="Users" asp-action="Index" class="btn btn-primary mt-auto">Go</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card dashboard-card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">Manage Tasks</h5>
                    <p class="card-text">View or edit all tasks in the system.</p>
                    <a asp-controller="Tasks" asp-action="Index" class="btn btn-primary mt-auto">Go</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card dashboard-card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">Levels & Categories</h5>
                    <p class="card-text">Create or manage XP levels and task categories.</p>
                    <a asp-controller="Gamification" asp-action="Index" class="btn btn-primary mt-auto">Manage</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card dashboard-card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">System Overview</h5>
                    <p class="card-text">Monitor system activity and reports.</p>
                    <a asp-controller="Security" asp-action="Index" class="btn btn-primary mt-auto">View</a>
                </div>
            </div>
        </div>
    </div>
</div>
