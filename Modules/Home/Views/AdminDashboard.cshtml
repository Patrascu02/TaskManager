@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-5 flex-wrap">
        <div>
            <h2 class="fw-bold text-dark mb-1">
                <i class="fas fa-tachometer-alt me-2" style="color: #10b981;"></i>Admin Dashboard
            </h2>
            <p class="text-muted mb-0">Monitorizare în timp real și administrare sistem.</p>
        </div>

        <div class="d-flex align-items-center bg-white shadow-sm rounded-pill px-4 py-2 mt-3 mt-md-0 border">
            <div class="me-3 text-end border-end pe-3">
                <div class="fw-bold text-dark" style="font-size: 1.1rem;">@ViewBag.CurrentTime</div>
                <div class="text-muted small text-uppercase" style="font-size: 0.7rem; letter-spacing: 1px;">Ora Server</div>
            </div>
            <div class="text-start">
                <div class="fw-bold text-success"><i class="far fa-calendar-alt me-1"></i> @ViewBag.CurrentDate</div>
                <div class="text-muted small text-uppercase" style="font-size: 0.7rem;">Data Curentă</div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-md">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle p-3 d-flex justify-content-center align-items-center me-3" style="background-color: rgba(16, 185, 129, 0.1); width: 64px; height: 64px;">
                        <i class="fas fa-server fa-2x text-success"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase mb-1 small fw-bold">Server Status</h6>
                        <h4 class="mb-0 fw-bold text-success">ONLINE</h4>
                        <small class="text-muted">Uptime stabil</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-md">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle p-3 d-flex justify-content-center align-items-center me-3" style="background-color: rgba(14, 116, 144, 0.1); width: 64px; height: 64px;">
                        <i class="fas fa-users fa-2x text-info"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase mb-1 small fw-bold">Utilizatori</h6>
                        <h4 class="mb-0 fw-bold" style="color: #0e7490;">@Model.TotalUsers</h4>
                        <a asp-controller="Users" asp-action="Index" class="text-decoration-none small text-info fw-bold">Gestionează &rarr;</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-md">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle p-3 d-flex justify-content-center align-items-center me-3" style="background-color: rgba(245, 158, 11, 0.1); width: 64px; height: 64px;">
                        <i class="fas fa-tasks fa-2x text-warning"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase mb-1 small fw-bold">Task-uri Active</h6>
                        <h4 class="mb-0 fw-bold text-warning">@Model.ActiveTasks</h4>
                        <small class="text-muted">din @Model.TotalTasks totale</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h5 class="mb-3 text-dark fw-bold border-bottom pb-2">Detalii Tehnice Sistem</h5>

    <div class="card border-0 shadow-md mb-4">
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-4 border-end">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fab fa-windows fa-lg text-primary me-2"></i>
                        <span class="text-muted text-uppercase small fw-bold">Sistem Operare</span>
                    </div>
                    <p class="fw-bold text-dark mb-0">@ViewBag.OSDescription</p>
                </div>
                <div class="col-md-4 border-end">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-code fa-lg text-danger me-2"></i>
                        <span class="text-muted text-uppercase small fw-bold">Framework .NET</span>
                    </div>
                    <p class="fw-bold text-dark mb-0">@ViewBag.FrameworkDescription</p>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-microchip fa-lg text-secondary me-2"></i>
                        <span class="text-muted text-uppercase small fw-bold">Arhitectură Procesor</span>
                    </div>
                    <p class="fw-bold text-dark mb-0">@ViewBag.ProcessArchitecture</p>
                </div>
            </div>
        </div>
    </div>
</div>