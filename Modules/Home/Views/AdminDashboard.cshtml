@model TaskManager.Modules.Home.Models.AdminDashboardViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="dashboard-wrapper fade-in">

    <main class="dashboard-main">

        <header class="hud-header-panel">
            <div>
                <h2 class="hud-welcome">ADMIN DASHBOARD</h2>
                <small>MONITORIZARE ÎN TIMP REAL ȘI ADMINISTRARE SISTEM</small>
            </div>
            <div class="d-flex flex-column align-items-end gap-1">
                <div class="hud-date" style="border-color: var(--hud-cyan); color: var(--hud-cyan);">
                    <i class="bi bi-clock me-2"></i>@ViewBag.CurrentTime
                </div>
                <div style="font-family: 'Courier New'; font-size: 0.8rem; color: #94a3b8;">
                    <i class="bi bi-calendar-event me-1"></i> @ViewBag.CurrentDate
                </div>
            </div>
        </header>

        <div class="row g-4 mb-4">

            <div class="col-md-4">
                <div class="tech-card h-100 d-flex align-items-center">
                    <div class="me-3 d-flex align-items-center justify-content-center"
                         style="width: 60px; height: 60px; background: rgba(16, 185, 129, 0.1); border: 1px solid #10b981; border-radius: 50%;">
                        <i class="fas fa-server fa-2x text-success"></i>
                    </div>
                    <div>
                        <h6 class="text-white-50 font-monospace mb-1" style="font-size: 0.8rem;">SERVER STATUS</h6>
                        <h4 class="mb-0 fw-bold text-success" style="text-shadow: 0 0 10px rgba(16, 185, 129, 0.5);">ONLINE</h4>
                        <small class="text-secondary font-monospace" style="font-size: 0.75rem;">UPTIME STABIL</small>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="tech-card h-100 d-flex align-items-center">
                    <div class="me-3 d-flex align-items-center justify-content-center"
                         style="width: 60px; height: 60px; background: rgba(6, 182, 212, 0.1); border: 1px solid var(--hud-cyan); border-radius: 50%;">
                        <i class="fas fa-users fa-2x text-info"></i>
                    </div>
                    <div>
                        <h6 class="text-white-50 font-monospace mb-1" style="font-size: 0.8rem;">UTILIZATORI</h6>
                        <h4 class="mb-0 fw-bold text-info">@Model.TotalUsers</h4>
                        <a asp-controller="Users" asp-action="Index" class="text-decoration-none small text-info fw-bold font-monospace hover-glow">
                            GESTIONEAZĂ <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="tech-card h-100 d-flex align-items-center">
                    <div class="me-3 d-flex align-items-center justify-content-center"
                         style="width: 60px; height: 60px; background: rgba(245, 158, 11, 0.1); border: 1px solid #f59e0b; border-radius: 50%;">
                        <i class="fas fa-tasks fa-2x text-warning"></i>
                    </div>
                    <div>
                        <h6 class="text-white-50 font-monospace mb-1" style="font-size: 0.8rem;">TASK-URI ACTIVE</h6>
                        <h4 class="mb-0 fw-bold text-warning">@Model.ActiveTasks</h4>
                        <small class="text-secondary font-monospace" style="font-size: 0.75rem;">DIN @Model.TotalTasks TOTALE</small>
                    </div>
                </div>
            </div>
        </div>

        <h5 class="mb-3 text-dark fw-bold font-monospace ps-2 border-start border-4 border-danger">
            DETALII TEHNICE SISTEM
        </h5>

        <div class="tech-card p-4">
            <div class="row">
                <div class="col-md-4 border-end border-secondary">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fab fa-windows fa-lg text-primary me-2"></i>
                        <span class="text-white-50 text-uppercase small fw-bold font-monospace">Sistem Operare</span>
                    </div>
                    <p class="fw-bold text-white mb-0 text-shadow-sm">@ViewBag.OSDescription</p>
                </div>

                <div class="col-md-4 border-end border-secondary">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-code fa-lg text-danger me-2"></i>
                        <span class="text-white-50 text-uppercase small fw-bold font-monospace">Framework .NET</span>
                    </div>
                    <p class="fw-bold text-white mb-0 text-shadow-sm">@ViewBag.FrameworkDescription</p>
                </div>

                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-microchip fa-lg text-secondary me-2"></i>
                        <span class="text-white-50 text-uppercase small fw-bold font-monospace">Arhitectură Procesor</span>
                    </div>
                    <p class="fw-bold text-white mb-0 text-shadow-sm">@ViewBag.ProcessArchitecture</p>
                </div>
            </div>
        </div>

    </main>
</div>