@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold"><i class="bi bi-speedometer2 text-danger"></i> Admin Dashboard</h2>
            <p class="text-muted">Monitorizare în timp real și administrare sistem.</p>
        </div>
        <span class="badge bg-light text-dark border p-2">
            <i class="bi bi-clock"></i> Server Time: @ViewBag.ServerTime
        </span>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3 shadow h-100">
                <div class="card-header bg-transparent border-0">Server Status</div>
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <h1 class="display-4"><i class="bi bi-hdd-rack-fill"></i></h1>
                    <h5 class="card-title">ONLINE</h5>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-dark bg-info bg-opacity-10 border-info mb-3 shadow h-100">
                <div class="card-header border-info text-info fw-bold">Database</div>
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <h1 class="display-4 text-info"><i class="bi bi-database-check"></i></h1>
                    <h5 class="card-title">Connected</h5>
                    <small class="text-muted">SQL Server Active</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-dark bg-warning bg-opacity-10 border-warning mb-3 shadow h-100">
                <div class="card-header border-warning text-warning fw-bold">Security</div>
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <h1 class="display-4 text-warning"><i class="bi bi-shield-lock-fill"></i></h1>
                    <h5 class="card-title">Secured</h5>
                    <small class="text-muted">RBAC Role System</small>
                </div>
            </div>
        </div>
    </div>

    <h4 class="mb-3 text-secondary">Statistici Platformă</h4>
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-primary shadow-sm h-100">
                <div class="card-body text-center">
                    <h6 class="text-primary text-uppercase">Total Utilizatori</h6>
                    <h2 class="display-5 fw-bold text-dark">@ViewBag.TotalUsers</h2>
                    <a asp-controller="Users" asp-action="Index" class="btn btn-sm btn-outline-primary mt-2">Gestionează Useri</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success shadow-sm h-100">
                <div class="card-body text-center">
                    <h6 class="text-success text-uppercase">Total Task-uri</h6>
                    <h2 class="display-5 fw-bold text-dark">@ViewBag.TotalTasks</h2>
                    <p class="mb-0 text-muted">Active: <strong>@ViewBag.ActiveTasks</strong></p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-secondary shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-secondary text-uppercase mb-3">Environment Info</h6>
                    <ul class="list-unstyled small text-muted">
                        <li class="mb-2"><strong>OS:</strong> @ViewBag.OSDescription</li>
                        <li class="mb-2"><strong>Framework:</strong> @ViewBag.Framework</li>
                        <li><strong>App Version:</strong> v1.0.0 (Licență)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>