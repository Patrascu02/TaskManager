@page
@model EmailModel
@{
    ViewData["Title"] = "Gestionare Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="d-flex align-items-center mb-4">
    <div class="bg-primary text-white rounded-circle p-3 me-3 shadow-sm">
        <i class="bi bi-envelope-check-fill fs-3"></i>
    </div>
    <div>
        <h3 class="fw-bold mb-0 text-dark">Adresă Email</h3>
        <small class="text-muted">Informațiile de contact ale contului</small>
    </div>
</div>

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-8">
        <div class="alert alert-warning border-0 shadow-sm d-flex align-items-center mb-4" role="alert" style="background-color: rgba(245, 158, 11, 0.1);">
            <i class="bi bi-shield-lock-fill text-warning me-3 fs-4"></i>
            <div>
                <strong>Informație:</strong> Această adresă de email este identificatorul unic al contului și
                <strong>nu poate fi modificată</strong>.
            </div>
        </div>

        <form id="email-form" method="post">
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control bg-light border-0 fw-bold text-dark shadow-none" disabled />
                <label asp-for="Email" class="form-label text-muted"><i class="bi bi-envelope-fill me-1"></i> Email Actual</label>
            </div>

        </form>
    </div>

    <div class="col-md-4 d-none d-md-flex align-items-center justify-content-center opacity-50">
        <i class="bi bi-at text-primary" style="font-size: 8rem; opacity: 0.1;"></i>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}