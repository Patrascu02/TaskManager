@page
@model IndexModel
@{
    ViewData["Title"] = "Profilul Meu";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="d-flex align-items-center mb-4">
    <div class="bg-primary text-white rounded-circle p-3 me-3 shadow-sm">
        <i class="bi bi-person-vcard-fill fs-3"></i>
    </div>
    <div>
        <h3 class="fw-bold mb-0 text-dark">Profil Public</h3>
        <small class="text-muted">Informațiile tale de identificare (Protejate)</small>
    </div>
</div>

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-8">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control bg-light border-0 fw-bold text-dark shadow-none" readonly />
                <label asp-for="Username" class="form-label text-muted"><i class="bi bi-person-badge-fill me-1"></i> Username</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" value="@User.Identity.Name" class="form-control bg-light border-0 fw-bold text-dark shadow-none" readonly />
                <label class="form-label text-muted"><i class="bi bi-envelope-fill me-1"></i> Email</label>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.PhoneNumber" class="form-control bg-white bg-opacity-50 border border-light shadow-sm" placeholder="Nr. Telefon" />
                <label asp-for="Input.PhoneNumber" class="form-label text-muted"><i class="bi bi-telephone-fill me-1"></i> Număr de Telefon</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold shadow hover-lift">
                <i class="bi bi-save me-2"></i>Salvează Modificările
            </button>
        </form>
    </div>

    <div class="col-md-4 d-none d-md-flex align-items-center justify-content-center opacity-50">
        <i class="bi bi-fingerprint text-primary" style="font-size: 8rem; opacity: 0.1;"></i>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}