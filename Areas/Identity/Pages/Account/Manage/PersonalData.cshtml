@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Datele Mele";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="d-flex align-items-center mb-4">
    <div class="bg-primary text-white rounded-circle p-3 me-3 shadow-sm">
        <i class="bi bi-file-person-fill fs-3"></i>
    </div>
    <div>
        <h3 class="fw-bold mb-0 text-dark">Informații Personale</h3>
        <small class="text-muted">Vizualizare detaliată a contului tău</small>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm bg-white rounded-4 overflow-hidden">
            <div class="card-body p-4">

                <div class="mb-4 pb-3 border-bottom border-light">
                    <label class="text-uppercase text-muted fw-bold small mb-1">Nume Complet</label>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-bounding-box text-primary me-3 fs-5"></i>
                        <span class="fs-5 fw-bold text-dark">@(Model.FullName ?? "Nedefinit")</span>
                    </div>
                </div>

                <div class="mb-4 pb-3 border-bottom border-light">
                    <label class="text-uppercase text-muted fw-bold small mb-1">Email</label>
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-envelope text-primary me-3 fs-5"></i>
                            <span class="fs-5 fw-bold text-dark">@Model.Email</span>
                        </div>
                        @if (Model.IsEmailConfirmed)
                        {
                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Verificat</span>
                        }
                        else
                        {
                            <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3">Neverificat</span>
                        }
                    </div>
                </div>

                <div class="mb-4 pb-3 border-bottom border-light">
                    <label class="text-uppercase text-muted fw-bold small mb-1">Utilizator (Username)</label>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-badge text-primary me-3 fs-5"></i>
                        <span class="fs-5 fw-bold text-dark">@Model.Username</span>
                    </div>
                </div>

                <div class="mb-2">
                    <label class="text-uppercase text-muted fw-bold small mb-1">Telefon</label>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-telephone text-primary me-3 fs-5"></i>
                        <span class="fs-5 fw-bold text-dark">@(Model.PhoneNumber ?? "Nu este setat")</span>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="col-md-4 d-none d-md-flex flex-column justify-content-center align-items-center text-center opacity-50">
        <i class="bi bi-shield-check text-primary" style="font-size: 8rem; opacity: 0.1;"></i>
        <p class="mt-3 text-muted small px-4">Datele tale sunt protejate și stocate în siguranță pe serverele noastre.</p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}