@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "~/Modules/Views/Shared/_Layout.cshtml";
    }
}

<div class="container py-5 fade-in-up">
    <div class="mb-4">
        <h2 class="fw-bold text-gradient display-5">Setări Cont</h2>
        <p class="text-muted fw-medium">Gestionează profilul și securitatea contului tău.</p>
    </div>

    <div class="card border-0 shadow-lg overflow-hidden">
        <div class="row g-0">
            <div class="col-md-3 border-end border-light bg-white bg-opacity-25 backdrop-blur">
                <div class="p-4 h-100">
                    <h5 class="fw-bold text-gradient mb-3"><i class="bi bi-gear-fill me-2"></i>Opțiuni</h5>

                    <partial name="_ManageNav" />
                </div>
            </div>

            <div class="col-md-9 bg-white bg-opacity-10 backdrop-blur">
                <div class="p-5 h-100">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .nav-pills .nav-link {
        color: #475569;
        font-weight: 600;
        border-radius: 10px;
        margin-bottom: 0.5rem;
        transition: all 0.3s ease;
        padding: 10px 15px;
    }

        .nav-pills .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.5);
            color: var(--primary-color);
            transform: translateX(5px);
        }

        .nav-pills .nav-link.active {
            background: var(--primary-gradient);
            color: white !important;
            box-shadow: var(--shadow-3d);
        }

        .nav-pills .nav-link i {
            margin-right: 10px;
        }

    .backdrop-blur {
        backdrop-filter: blur(10px);
    }
</style>

@section Scripts {
    @RenderSection("Scripts", required: false)
}