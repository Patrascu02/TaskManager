@page
@model LoginModel

@{
    ViewData["Title"] = "AUTENTIFICARE";
    Layout = "~/Modules/Views/Shared/_Layout.cshtml";
}

<div class="fade-in pt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">

                <div class="tech-card p-4 shadow-lg" style="border: 1px solid var(--hud-cyan);">

                    <div class="text-center mb-4">
                        <div class="d-inline-flex align-items-center justify-content-center p-3 rounded-circle mb-3"
                             style="background: rgba(6, 182, 212, 0.1); border: 1px solid var(--hud-cyan);">
                            <i class="bi bi-shield-lock-fill text-info" style="font-size: 2.5rem;"></i>
                        </div>
                        <h3 class="text-white font-monospace fw-bold">ACCES SISTEM</h3>
                        <p class="text-white-50 small font-monospace">INTRODUCEȚI CREDENȚIALELE</p>
                    </div>

                    <form id="account" method="post">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger font-monospace text-center small mb-4" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control bg-dark text-info border-secondary font-monospace" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-muted">EMAIL</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="input-group mb-3">
                            <div class="form-floating flex-grow-1">
                                <input asp-for="Input.Password" id="passwordInput" class="form-control bg-dark text-info border-secondary font-monospace"
                                       style="border-right: none;" autocomplete="current-password" aria-required="true" placeholder="password" type="password" />
                                <label asp-for="Input.Password" class="text-muted">PAROLĂ</label>
                            </div>
                            <span class="input-group-text bg-dark border-secondary" style="border-left: none; cursor: pointer;" onclick="togglePassword()">
                                <i class="bi bi-eye text-info" id="eyeIcon"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger small d-block mb-3"></span>

                        <div class="form-check mb-4">
                            <label asp-for="Input.RememberMe" class="form-check-label text-white-50 small font-monospace">
                                <input class="form-check-input bg-dark border-secondary" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe).ToUpper()
                            </label>
                        </div>

                        <div class="d-grid">
                            <button id="login-submit" type="submit" class="btn btn-lg btn-tech fw-bold font-monospace">
                                <i class="bi bi-box-arrow-in-right me-2"></i> CONECTARE
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <p class="mb-0">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none text-info small font-monospace hover-glow">
                                    AI UITAT PAROLA?
                                </a>
                            </p>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function togglePassword() {
            var input = document.getElementById("passwordInput");
            var icon = document.getElementById("eyeIcon");

            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
            }
        }
    </script>
}