@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Autentificare în doi pași";
}

<div class="row justify-content-center align-items-center min-vh-75 fade-in-up">
    <div class="col-md-6 col-lg-5">
        <div class="card border-0 shadow-lg bg-white bg-opacity-65 backdrop-blur" style="border-radius: 20px;">
            <div class="card-body p-5 text-center">

                <div class="bg-primary text-white rounded-circle p-3 d-inline-block mb-4 shadow-sm">
                    <i class="bi bi-shield-check display-4"></i>
                </div>

                <h2 class="fw-bold text-gradient mb-3">Verificare 2FA</h2>
                <p class="text-muted mb-4">Contul tău este protejat. Introdu codul din aplicația de autentificare.</p>

                <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                    <input asp-for="RememberMe" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.TwoFactorCode" class="form-control bg-white border-0 shadow-sm text-center fw-bold fs-4" autocomplete="off" placeholder="Cod" style="border-radius: 12px; letter-spacing: 5px;" />
                        <label asp-for="Input.TwoFactorCode" class="text-muted w-100 text-center">Cod Autentificare</label>
                        <span asp-validation-for="Input.TwoFactorCode" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-4 d-flex justify-content-center gap-2">
                        <input class="form-check-input" asp-for="Input.RememberMachine" />
                        <label class="form-check-label text-muted small" asp-for="Input.RememberMachine">
                            Nu cere cod pe acest dispozitiv
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold shadow-lg hover-lift">
                        <i class="bi bi-unlock-fill me-2"></i> Verifică
                    </button>
                </form>

                <div class="mt-4 pt-3 border-top border-light">
                    <p class="small text-muted mb-1">Nu ai acces la telefon?</p>
                    <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-primary text-decoration-none hover-lift d-inline-block">
                        Loghează-te cu un cod de recuperare
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style>
    .backdrop-blur {
        backdrop-filter: blur(10px);
    }</style>